<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.tmm.android.camera"
      android:versionCode="1"
      android:versionName="1.0">
      <uses-permission android:name="android.permission.CAMERA"/>
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
      <uses-permission android:name="com.android.vending.CHECK_LICENSE" />
    <application android:icon="@drawable/logo" android:label="@string/app_name" android:name=".application.CameraApplication">
        <activity android:name=".SplashActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name=".CameraViewActivity" />
		<activity android:name=".SettingsActivity" />
		<activity android:name="PreviewActivity" android:screenOrientation="portrait"/>
    </application>
    <uses-sdk android:minSdkVersion="8" />

</manifest> 